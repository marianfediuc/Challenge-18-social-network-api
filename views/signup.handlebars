<form class="form-horizontal" id="form-signup">
  
  <div class="form-group">
    <label for="username-signup" class="col-sm-2 control-label text-warning">Username:</label>
    <div class="col-sm-4">
      <input type="text" class="form-control bg-dark text-white" id="username-signup" placeholder="Required" />
    </div>
  </div>
  
  <div class="form-group">
    <label for="email-signup" class="col-sm-2 control-label text-warning">Email:</label>
    <div class="col-sm-4">
      <input type="email" class="form-control bg-dark text-white" id="email-signup" placeholder="Required" />
    </div>
  </div>

  <div class="form-group">
    <label for="password-signup" class="col-sm-2 control-label text-warning">Password:</label>
    <div class="col-sm-4">
      <input type="password" class="form-control bg-dark text-white" id="password-signup" placeholder="Required" />
    </div>
  </div>

  <div class="form-group">
    <label for="github-signup" class="col-sm-2 control-label text-warning">GitHub Username:</label>
    <div class="col-sm-4">
      <input class="form-control bg-dark text-white" id="github-signup" placeholder="ex: /username" />
    </div>
  </div>

  <div class="form-group">
    <label for="linkedin-signup" class="col-sm-2 control-label text-warning">LinkedIn:</label>
    <div class="col-sm-4">
      <input class="form-control bg-dark text-white" id="linkedin-signup" placeholder="ex: https://www.linkedin.com/in/your-info/" />
    </div>
  </div>
  
  <div class="form-group">
    <label for="bio-text" class="col-sm-2 control-label text-warning">Bio:</label>
    <div class="col-sm-10">
      <textarea type="text" class="form-control bg-dark text-white" rows="3" id="bio-signup" placeholder="Optional"></textarea>
    </div>
  </div>

  <div>
    <button type="submit" class="btn btn-warning" id="btn-signup">Sign-up</button>
  </div>

</form>

<script src="/javascript/signup.js"></script>